<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <servlet>
    <servlet-name>Root-Servlet</servlet-name>
    <servlet-class>eu.jaaz.portal.core.RootServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Locale-Servlet</servlet-name>
    <servlet-class>eu.jaaz.portal.web.LocaleServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Root-Servlet</servlet-name>
    <url-pattern>/index.html</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Root-Servlet</servlet-name>
    <url-pattern>/portal/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Locale-Servlet</servlet-name>
    <url-pattern>/js/locale/*</url-pattern>
  </servlet-mapping>
</web-app>